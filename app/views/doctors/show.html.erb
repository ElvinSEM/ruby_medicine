<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4">
      <h1><%= @doctor.name %></h1>
      <% if @doctor.image.attached? %>
        <%= image_tag @doctor.image, alt: @doctor.name, class: 'img-fluid mb-3' %>
      <% end %>
    </div>

    <div class="col-md-8">
      <div class="mb-3">
        <p><strong><%= t('doctors.show.specialty') %>:</strong> <%= @doctor.specialty %></p>
        <p><strong><%= t('doctors.show.phone') %>:</strong> <%= @doctor.phone %></p>
<!--        <p><strong><%#= t('doctors.show.experience') %>:</strong> <%#= @doctor.description %></p>-->
      </div>

      <% if current_user.admin? || current_user == @doctor %>
        <div class="mb-3">
          <%= link_to t('doctors.show.edit'), edit_doctor_path(@doctor), class: 'btn btn-primary mr-2' %>
          <%= button_to t('doctors.show.delete'), @doctor, method: :delete, data: { confirm: t('doctors.show.confirm_delete') }, class: 'btn btn-danger' %>
        </div>
      <% end %>

      <div>
        <%= link_to t('doctors.show.back_to_list'), doctors_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>

  <hr>

  <h2 class="mt-4"><%= t('doctors.show.reviews_title') %></h2>
  <% @doctor.reviews.each do |review| %>
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title"><%= review.name %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= review.created_at.strftime("%d/%m/%Y, %H:%M") %></h6>
        <p class="card-text"><%= review.body %></p>
      </div>
    </div>
  <% end %>
</div>
