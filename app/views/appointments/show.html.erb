<div class="container mt-4">
  <div class="alert alert-success" role="alert" style="color: green"><%= notice %></div>

  <div class="card mb-4">
    <div class="card-header">
      <h4><%= t('.appointment_details') %></h4>
    </div>
    <div class="card-body">
      <p>
        <strong><%= t('appointments.show.appointment_date') %>:</strong> <%= l @appointment.start_time, format: :long %>
      </p>
      <p>
        <strong><%= t('appointments.show.doctor') %>:</strong> <%= @appointment.doctor.name %>
      </p>
      <p>
        <strong><%= t('appointments.show.problem_description') %>:</strong> <%= Appointment::PROBLEMS[@appointment.problem_id] %>
      </p>
      <p>
        <strong><%= t('appointments.show.age') %>:</strong> <%= @appointment.age %>
      </p>
      <p>
        <strong><%= t('appointments.show.additional_info') %>:</strong> <%= @appointment.info %>
      </p>
    </div>
    <div class="card-footer d-flex justify-content-start">
      <%= link_to t('appointments.show.edit'), edit_appointment_path(@appointment), class: 'btn btn-warning' %>
      <%= link_to t('appointments.show.back_to_list'), appointments_path, class: 'btn btn-secondary' %>
      <%= button_to t('appointments.show.delete'), @appointment, method: :delete, class: 'btn btn-danger', data: { confirm: t('appointments.show.confirm_delete') } %>
    </div>
  </div>
</div>
