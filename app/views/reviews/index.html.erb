<!-- app/views/reviews/index.html.erb -->
<h1><%= t('reviews.title') %></h1>

<ul class="list-group">
  <% @reviews.each do |review| %>
    <%= render partial: 'review', locals: { review: review } %>
  <% end %>
</ul>

<div id="show-more-container">
  <%= link_to t('reviews.show_more'), show_all_reviews_path, class: 'btn btn-primary', id: 'show-more-button' %>
</div>

<%= link_to t('reviews.new'), new_review_path, class: 'btn btn-success' if user_signed_in? %>

