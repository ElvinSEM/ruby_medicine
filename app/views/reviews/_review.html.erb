<!-- app/views/reviews/_review.html.erb -->
<% if policy(review).destroy? %>
  <%= button_to 'Удалить', review_path(review), method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-danger' %>
<% end %>

<% if review.doctor %>
  <li class="list-group-item">
    <h5> Отзыв для <%= link_to review.doctor.name, doctor_path(review.doctor) %></h5>
    <p><%= review.body %></p>
  </li>
<% else %>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title"><%= review.name %></h5>
      <p class="card-text"><%= review.body %></p>
    </div>
  </div>
<% end %>
